\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{teoremas}[2021/04/09 Macros gerais para teoremas]
\RequirePackage{amsthm,thmtools}
\RequirePackage{translations}

\declaretheorem{theorem}
\declaretheorem[sibling=theorem]{lemma}
\declaretheorem[sibling=theorem]{corollary}
\declaretheorem[sibling=theorem]{proposition}
\declaretheorem[style=definition]{definition}
\declaretheorem[style=definition,refname={hypothesis, Hypothesis}]{hypothesis}

\DeclareTranslationFallback{question}{Question}
\DeclareTranslation{portuguese}{question}{Questão}
\declaretheorem[style=definition,name=\protect\GetTranslation{question}]{question}
\declaretheorem[style=definition]{exercise}

\DeclareTranslationFallback{solution}{Solution}
\DeclareTranslation{portuguese}{solution}{Solução}
\newenvironment{solution}[1][\protect\GetTranslation{solution}]
{\proof[#1]}
{\endproof}

\declaretheorem[style=definition, within=section]{example}
\declaretheorem[style=remark]{remark}

\DeclareTranslationFallback{claim}{Claim}
\DeclareTranslation{portuguese}{claim}{Afirmação}
\newcounter{claim}[theorem]
\newenvironment{claim}{\stepcounter{claim}{\endlist\noindent{}\protect\GetTranslation{claim}\theclaim:}}{\endlist}

