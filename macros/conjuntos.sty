\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{conjuntos}[2021/04/09 Macros gerais para conjuntos]

\RequirePackage{semantex}

% set
\NewVariableClass\Set[
  define keys={
    {int}{command = \mathring},
    {boundary}{command = \partial},
    {closure}{command = \overline},
    {c}{upper = \complement},
    {quot}{ command = {\widetilde} },
  }
]
\NewObject\Set\U{U}
\NewObject\Set\E{E}

% anyset
\NewObject\Set\aset{S}

% compact metric space
\NewObject\Set\cms{X}

% compact connected manifold
\NewObject\Set\ccm{M}

% circle
\NewObject\Set\circl{\mathbb{S}}


\DeclareObject\Set\H{H}
\DeclareObject\Set\S{S}
\NewObject\Set\I{I}
\NewObject\Set\NN{\mathbb{N}}
\NewObject\Set\NNZ{\mathbb{Z}_{\ge 0}}
\NewObject\Set\ZZ{\mathbb{Z}}
\NewObject\Set\QQ{\mathbb{Q}}
\NewObject\Set\RR{\mathbb{R}}

% powerset
\newcommand\powerset[1]{\Set{2^{#1}}}

% family of sets
\NewVariableClass\SetFam[output=\Set]

%% continuous functions
\NewObject\SetFam\Cs{C}

% Notations
\NewVariableClass\Notation{}

\newcommand\wherecommand [1]{%
  \nonscript\:%
  #1\vert
  \allowbreak
  \nonscript\:%
  \mathopen{}%
}

\NewObject\Notation\where{\wherecommand{\SemantexDelimiterSize}}
\NewObject\Notation\wheres{:}
\NewObject\Notation\set[
  output=\Set,
  left par=\lbrace, right par=\rbrace,
  % pre arg={\.}, post arg={\.},
  % adds \, inside {...} , as recommended by D. Knuth
  arg keyval=false,
  % this turns off all keyval syntax in the argument
]
